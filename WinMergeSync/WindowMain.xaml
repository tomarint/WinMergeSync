<Window x:Class="WinMergeSync.WindowMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WinMergeSync" Height="150" Width="150"
        Topmost="True" WindowStyle="ToolWindow"
>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Button 
            Grid.Column="0" Grid.Row="0"
            x:Name="ButtonPrev" Content="↑" Click="ButtonPrev_Click"
            FontSize="36" FontWeight="Bold"
            />
        <Button 
            Grid.Column="0" Grid.Row="1"
            x:Name="ButtonNext" Content="↓" Click="ButtonNext_Click"
            FontSize="36" FontWeight="Bold"
            />
        <Button 
            Grid.Column="1" Grid.Row="0"
            x:Name="ButtonReload" Content="↺" Click="ButtonReload_Click"
            FontSize="36" FontWeight="Bold"
            />
        <Button 
            Grid.Column="1" Grid.Row="1"
            x:Name="ButtonClose" Content="×" Click="ButtonClose_Click"
            FontSize="36" FontWeight="Bold"
            />
    </Grid>
</Window>
